{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@ktru-services/*": ["app/common/services/*"],
      "@ktru-pipes/*": ["app/common/pipes/*"],
      "@ktru-modals/*": ["app/common/modals/*"],
      "@ktru-models/*": ["app/common/models/*"],
      "@ktru-modules/*": ["app/common/modules/*"],
      "@ktru-factories/*": ["app/common/factories/*"],
      "@ktru-directives/*": ["app/common/directives/*"],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },

}
